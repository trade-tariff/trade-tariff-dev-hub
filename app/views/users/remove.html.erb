<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Remove a user from an organisation</h1>
    <p class="govuk-body">Check the below details regarding the User you have selected to remove and confirm your choice.</p>
    <%= govuk_warning_text(text: "This will remove the user. The next time they sign in they won't be associated with your organisation") %>
    <%= govuk_table do |table|
          table.with_body do |body|
            body.with_row do |row|
              row.with_cell(header: true, text: 'Email address')
              row.with_cell(text: @user.email_address)
            end
          end
        end
    %>
    <div class="govuk-button-group">
      <%= govuk_button_to 'Remove', user_path(@user), method: :delete, warning: true %>
      <%= govuk_button_to 'Cancel', organisation_path(current_user.organisation), method: :get, secondary: true %>
    </div>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Delete invitation</h1>
    <%= govuk_warning_text(text: "This invitation will be deleted with immediate effect and cannot be recovered once deleted.") %>
    <p class="govuk-body">Please check the below details regarding the invitation you have selected to delete and confirm your choice.</p>
    <%= govuk_table do |table|
          table.with_body do |body|
            body.with_row do |row|
              row.with_cell(header: true, text: 'Invitee email')
              row.with_cell(text: @invitation.invitee_email)
            end
            body.with_row do |row|
              row.with_cell(header: true, text: 'Created on')
              row.with_cell(text: created_on(@invitation))
            end
            body.with_row do |row|
              row.with_cell(header: true, text: 'Status')
              row.with_cell(text: invitation_status(@invitation))
            end
          end
        end
    %>
    <div class="govuk-button-group">
      <%= govuk_button_to 'Delete', delete_invitation_path(@invitation), method: :delete, class: 'govuk-button govuk-button--warning' %>
      <%= govuk_link_to 'Cancel', organisation_path(@invitation.organisation_id), class: 'govuk-link' %>
    </div>
  </div>
</div>

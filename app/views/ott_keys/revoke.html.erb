<h1 class="govuk-heading-l">Revoke OTT API key</h1>

<%= govuk_warning_text(text: "Are you sure you want to revoke this OTT API key? This action cannot be undone.") %>

<%= govuk_summary_list do |summary_list|
  summary_list.with_row do |row|
    row.with_key(text: "Client ID")
    row.with_value(text: @ott_key.client_id)
  end
  summary_list.with_row do |row|
    row.with_key(text: "Description")
    row.with_value(text: @ott_key.description)
  end
  summary_list.with_row do |row|
    row.with_key(text: "Scopes")
    row.with_value(text: @ott_key.scopes.join(', '))
  end
end %>

<%= govuk_form_with url: revoke_ott_key_path(@ott_key), method: :patch, local: true do |form|
  form.govuk_submit "Revoke OTT API key", warning: true
end %>

<div class="govuk-button-group">
  <%= govuk_link_to('Cancel', ott_keys_path) %>
</div>

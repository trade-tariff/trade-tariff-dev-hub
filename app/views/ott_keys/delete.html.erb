<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Delete an OTT API key</h1>
    <%= govuk_warning_text(text: "Your OTT API Key will be deleted with immediate effect and cannot be reactivated once deleted.") %>
    <p class="govuk-body">Please check the below details regarding the OTT API Key you have selected to delete and confirm your choice.</p>
    <%= govuk_table do |table|
          table.with_body do |body|
            body.with_row do |row|
              row.with_cell(header: true, text: 'Client ID')
              row.with_cell(text: mask_ott_key(@ott_key))
            end
          end
        table.with_body do |body|
          body.with_row do |row|
            row.with_cell(header: true, text: 'Description')
            row.with_cell(text: @ott_key.description)
          end
          body.with_row do |row|
            row.with_cell(header: true, text: 'Created on')
            row.with_cell(text: created_on(@ott_key))
          end
        end
      end
    %>
    <div class="govuk-button-group">
      <%= govuk_button_to 'Delete', delete_ott_key_path(@ott_key), method: :delete, class: 'govuk-button govuk-button--warning' %>
      <%= govuk_link_to 'Cancel', ott_keys_path, class: 'govuk-link' %>
    </div>
  </div>
</div>
